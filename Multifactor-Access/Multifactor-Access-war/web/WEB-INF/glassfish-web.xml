<glassfish-web-app error-url="">
    <class-loader delegate="true"/>
    <jsp-config>
        <property name="keepgenerated" value="true">
            <description>Keep a copy of the generated servlet class' java code.</description>
        </property>
    </jsp-config>
    <mime-mapping>
        <extension>Employee</extension>
        <mime-type>text/plain</mime-type>
    </mime-mapping>
  
    <security-role-mapping>
        <role-name>user</role-name>
        <group-name>user</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>admin</role-name>
        <group-name>admin</group-name>
    </security-role-mapping>
    
    <auth-realm name="jdbc_realm">
        <realm-properties>
            <property name="jaas-context" value="jdbcRealm"></property>
            <property name="user-table" value="tb_credential"></property>
            <property name="user-name-column" value="tb_employee_id"></property>
            <property name="password-column" value="password"></property>
            <property name="group-table" value="tb_group"></property>
            <property name="group-table-user-name-column" value="tb_employee_id"></property>
            <property name="group-name-column" value="groupName"></property>
            <property name="password-encryption-algorithm" value="SHA-256"></property>
        </realm-properties>
    </auth-realm>
  
</glassfish-web-app>
